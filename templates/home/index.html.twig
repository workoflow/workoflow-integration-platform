<script>
// Smooth scroll
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
            target.scrollIntoView({ behavior: 'smooth', block: 'start', inline: 'nearest' });
        }
    });
});

// Waitlist form submission
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('waitlistForm');
    const emailInput = document.getElementById('waitlistEmail');
    const submitBtn = document.getElementById('waitlistSubmit');
    const btnText = submitBtn.querySelector('.btn-text');
    const btnLoader = submitBtn.querySelector('.btn-loader');
    const btnSuccess = submitBtn.querySelector('.btn-success');
    const formMessage = document.getElementById('formMessage');

    form.addEventListener('submit', async function(e) {
        e.preventDefault();

        const email = emailInput.value.trim();
        if (!email) return;

        // Show loading state
        btnText.style.display = 'none';
        btnLoader.style.display = 'inline';
        submitBtn.disabled = true;
        formMessage.style.display = 'none';

        try {
            const response = await fetch('{{ path('app_waitlist_submit') }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({ email: email })
            });

            const data = await response.json();

            if (data.success) {
                // Show success state
                btnLoader.style.display = 'none';
                btnSuccess.style.display = 'inline';
                submitBtn.classList.add('btn-success-state');
                emailInput.disabled = true;

                // Show success message
                formMessage.textContent = data.message || 'Successfully joined the waitlist!';
                formMessage.className = 'form-message success';
                formMessage.style.display = 'block';
            } else {
                // Show error
                btnLoader.style.display = 'none';
                btnText.style.display = 'inline';
                submitBtn.disabled = false;

                formMessage.textContent = data.error || 'An error occurred. Please try again.';
                formMessage.className = 'form-message error';
                formMessage.style.display = 'block';
            }
        } catch (error) {
            // Network error
            btnLoader.style.display = 'none';
            btnText.style.display = 'inline';
            submitBtn.disabled = false;

            formMessage.textContent = 'An error occurred. Please try again.';
            formMessage.className = 'form-message error';
            formMessage.style.display = 'block';
        }
    });
});
</script>
