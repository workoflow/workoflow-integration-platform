{% extends 'base.html.twig' %}

{% block title %}{{ 'release_notes.title'|trans }} - Workoflow{% endblock %}

{% block body %}
<div class="dashboard-page release-notes-page">
    <div class="dashboard-container">
        <div class="page-header">
            <div>
                <h1 class="dashboard-title">{{ 'release_notes.title'|trans }}</h1>
                <p class="page-subtitle">{{ 'release_notes.subtitle'|trans }}</p>
            </div>
        </div>

        {# Tab Navigation #}
        <div class="release-notes-tabs">
            {% for key, notes in releaseNotes %}
                <button type="button"
                        class="release-tab {% if loop.first %}active{% endif %}"
                        data-tab="{{ key }}"
                        onclick="switchReleaseTab('{{ key }}')">
                    <i class="fas {{ notes.icon }}" aria-hidden="true"></i>
                    <span>{{ notes.name|trans }}</span>
                </button>
            {% endfor %}
        </div>

        {# Tab Content #}
        <div class="release-notes-content">
            {% for key, notes in releaseNotes %}
                <div class="release-tab-pane {% if loop.first %}active{% endif %}" id="tab-{{ key }}">
                    {# Project Header #}
                    <div class="release-project-header">
                        <div class="release-project-info">
                            <div class="release-project-icon">
                                <i class="fas {{ notes.icon }}" aria-hidden="true"></i>
                            </div>
                            <div class="release-project-details">
                                <h2>{{ notes.name|trans }}</h2>
                                <p>{{ notes.description|trans }}</p>
                            </div>
                        </div>
                        <div class="release-project-actions">
                            <a href="{{ notes.github }}" target="_blank" rel="noopener noreferrer" class="btn btn-secondary">
                                <i class="fab fa-github" aria-hidden="true"></i>
                                {{ 'release_notes.view_on_github'|trans }}
                            </a>
                            {% if notes.fetchedAt %}
                                <span class="release-last-updated">
                                    <i class="fas fa-clock" aria-hidden="true"></i>
                                    {{ 'release_notes.last_updated'|trans }}: {{ notes.fetchedAt|date('d.m.Y H:i') }}
                                </span>
                            {% endif %}
                        </div>
                    </div>

                    {# Content or Error #}
                    {% if notes.error %}
                        <div class="release-error">
                            <div class="release-error-icon">
                                <i class="fas fa-exclamation-triangle" aria-hidden="true"></i>
                            </div>
                            <div class="release-error-content">
                                <h3>{{ 'release_notes.error'|trans }}</h3>
                                <p>{{ notes.error }}</p>
                            </div>
                        </div>
                    {% else %}
                        <div class="release-changelog markdown-content">
                            {{ notes.content|raw }}
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>

<style>
.release-notes-page {
    padding: 2rem;
}

.release-notes-tabs {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    border-bottom: 1px solid var(--border-color, #333);
    padding-bottom: 1rem;
}

.release-tab {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: transparent;
    border: 1px solid var(--border-color, #333);
    border-radius: 0.5rem;
    color: var(--text-secondary, #999);
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.9rem;
}

.release-tab:hover {
    background: var(--bg-secondary, #1a1a1a);
    color: var(--text-primary, #fff);
    border-color: var(--border-hover, #444);
}

.release-tab.active {
    background: var(--primary-color, #ff6b35);
    color: #fff;
    border-color: var(--primary-color, #ff6b35);
}

.release-tab i {
    font-size: 1rem;
}

.release-tab-pane {
    display: none;
}

.release-tab-pane.active {
    display: block;
}

.release-project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 1.5rem;
    padding: 1.5rem;
    background: var(--bg-secondary, #1a1a1a);
    border: 1px solid var(--border-color, #333);
    border-radius: 0.75rem;
    margin-bottom: 1.5rem;
}

.release-project-info {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
}

.release-project-icon {
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--primary-color, #ff6b35);
    border-radius: 0.5rem;
    color: #fff;
    font-size: 1.25rem;
}

.release-project-details h2 {
    margin: 0 0 0.25rem 0;
    font-size: 1.25rem;
    color: var(--text-primary, #fff);
}

.release-project-details p {
    margin: 0;
    color: var(--text-secondary, #999);
    font-size: 0.9rem;
    max-width: 500px;
}

.release-project-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
}

.release-project-actions .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.release-last-updated {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted, #666);
    font-size: 0.85rem;
}

.release-error {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.5rem;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 0.75rem;
}

.release-error-icon {
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(239, 68, 68, 0.2);
    border-radius: 50%;
    color: #ef4444;
    font-size: 1rem;
}

.release-error-content h3 {
    margin: 0 0 0.5rem 0;
    color: #ef4444;
    font-size: 1rem;
}

.release-error-content p {
    margin: 0;
    color: var(--text-secondary, #999);
    font-size: 0.9rem;
}

.release-changelog {
    padding: 1.5rem;
    background: var(--bg-secondary, #1a1a1a);
    border: 1px solid var(--border-color, #333);
    border-radius: 0.75rem;
    max-height: 70vh;
    overflow-y: auto;
}

/* Markdown Content Styling */
.markdown-content {
    color: var(--text-primary, #fff);
    line-height: 1.7;
}

.markdown-content h1 {
    font-size: 1.75rem;
    margin: 0 0 1.5rem 0;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--border-color, #333);
    color: var(--text-primary, #fff);
}

.markdown-content h2 {
    font-size: 1.35rem;
    margin: 2rem 0 1rem 0;
    color: var(--primary-color, #ff6b35);
}

.markdown-content h3 {
    font-size: 1.1rem;
    margin: 1.5rem 0 0.75rem 0;
    color: var(--text-primary, #fff);
}

.markdown-content ul,
.markdown-content ol {
    margin: 0.75rem 0;
    padding-left: 1.5rem;
}

.markdown-content li {
    margin: 0.4rem 0;
}

.markdown-content p {
    margin: 0.75rem 0;
}

.markdown-content code {
    background: var(--bg-primary, #0a0a0a);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
    color: var(--primary-color, #ff6b35);
}

.markdown-content pre {
    background: var(--bg-primary, #0a0a0a);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1rem 0;
}

.markdown-content pre code {
    background: transparent;
    padding: 0;
}

.markdown-content a {
    color: var(--primary-color, #ff6b35);
    text-decoration: none;
}

.markdown-content a:hover {
    text-decoration: underline;
}

.markdown-content blockquote {
    border-left: 3px solid var(--primary-color, #ff6b35);
    padding-left: 1rem;
    margin: 1rem 0;
    color: var(--text-secondary, #999);
}

.markdown-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
}

.markdown-content th,
.markdown-content td {
    padding: 0.75rem;
    border: 1px solid var(--border-color, #333);
    text-align: left;
}

.markdown-content th {
    background: var(--bg-primary, #0a0a0a);
}

.markdown-content hr {
    border: none;
    border-top: 1px solid var(--border-color, #333);
    margin: 2rem 0;
}

/* Responsive */
@media (max-width: 768px) {
    .release-notes-page {
        padding: 1rem;
    }

    .release-notes-tabs {
        flex-direction: column;
    }

    .release-tab {
        width: 100%;
        justify-content: center;
    }

    .release-project-header {
        flex-direction: column;
    }

    .release-project-actions {
        width: 100%;
        flex-direction: column;
        align-items: flex-start;
    }

    .release-project-actions .btn {
        width: 100%;
        justify-content: center;
    }
}
</style>

<script>
function switchReleaseTab(tabKey) {
    // Remove active class from all tabs and panes
    document.querySelectorAll('.release-tab').forEach(tab => tab.classList.remove('active'));
    document.querySelectorAll('.release-tab-pane').forEach(pane => pane.classList.remove('active'));

    // Add active class to selected tab and pane
    document.querySelector('[data-tab="' + tabKey + '"]').classList.add('active');
    document.getElementById('tab-' + tabKey).classList.add('active');
}
</script>
{% endblock %}
