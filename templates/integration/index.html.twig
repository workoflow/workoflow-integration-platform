{% extends 'base.html.twig' %}

{% block title %}{{ 'integration.skills_page_title'|trans }} - Workoflow{% endblock %}

{% block body %}
<div class="integrations-page">
    <div class="integrations-container">
        <div class="integrations-header">
            <h1>{{ 'integration.skills_page_title'|trans }}</h1>
            <div class="skills-explanation">
                <p>{{ 'integration.skills_explanation_p1'|trans }}</p>
                <p>{{ 'integration.skills_explanation_p2'|trans }}</p>
            </div>
        </div>

        {% if integrations|length == 0 %}
            <div class="empty-state">
                <p>{{ 'integration.no_integrations'|trans }}</p>
            </div>
        {% else %}
            {# Personalized Skills Table Component #}
            {{ component('skills_table', {
                integrations: integrations,
                availableTypes: availableTypes
            }) }}

            {# Platform Skills Card Component #}
            {{ component('platform_skills_card', {
                integrations: integrations
            }) }}
        {% endif %}
    </div>
</div>

{# Test Connection Result Modal - Minimalist Elegant Design #}
<div id="testConnectionModal" class="modal" role="dialog" aria-labelledby="modalTitle" aria-modal="true">
    <div class="modal-container">
        <div class="modal-content" id="modalContentWrapper">
            <div class="modal-header">
                <div class="modal-icon" id="modalIcon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <button type="button" class="modal-close" onclick="hideTestModal()" aria-label="Close">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <h3 id="modalTitle" class="modal-title">Test Connection</h3>
                <div id="modalMessage" class="modal-message"></div>
                <div id="modalDetails" class="modal-details hidden"></div>
                <div id="modalSuggestion" class="modal-suggestion hidden"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" id="modalCloseBtn" onclick="hideTestModal()">
                    {{ 'action.close'|trans|default('Close') }}
                </button>
            </div>
        </div>
    </div>
</div>

<script>
// Modal close functions (needed for the modal close button)
function hideTestModal() {
    const modal = document.getElementById('testConnectionModal');
    modal.classList.remove('show');
}

// Close modal on ESC key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        hideTestModal();
    }
});

// Close modal when clicking outside
document.getElementById('testConnectionModal')?.addEventListener('click', function(e) {
    if (e.target === this) {
        hideTestModal();
    }
});

// Skill Request Modal functions
function hideSkillRequestModal() {
    const modal = document.getElementById('skillRequestModal');
    modal.classList.remove('show');
    // Reset form
    document.getElementById('skillRequestForm')?.reset();
}

// Close modal on ESC key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        const skillModal = document.getElementById('skillRequestModal');
        if (skillModal?.classList.contains('show')) {
            hideSkillRequestModal();
        }
    }
});

// Close modal when clicking outside
document.getElementById('skillRequestModal')?.addEventListener('click', function(e) {
    if (e.target === this) {
        hideSkillRequestModal();
    }
});
</script>

{% endblock %}
