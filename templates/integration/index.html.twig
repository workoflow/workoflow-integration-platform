.modal-suggestion {
    margin-top: var(--space-md);
    padding: var(--space-md);
    background: rgba(59, 130, 246, 0.1);
    border-left: 3px solid #3b82f6;
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-size: var(--text-sm);
    line-height: 1.6;
