{% extends 'base.html.twig' %}

{% block title %}{{ 'integration.platform_skills_edit'|trans|default('Manage Platform Skills') }} - Workoflow{% endblock %}

{% block body %}
<div class="integrations-page">

    <div class="platform-skills-container">
        <div class="platform-skills-header">
            <div class="header-content">
                <h1>{{ 'integration.platform_skills_edit'|trans|default('Manage Platform Skills') }}</h1>
                <p class="page-description">
                    {{ 'integration.platform_skills_edit_description'|trans|default('Enable or disable platform tools that are available to all users in your organization') }}
                </p>
            </div>
            <a href="{{ path('app_skills') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> {{ 'action.back_to_skills'|trans|default('Back to Skills') }}
            </a>
        </div>

        <div class="table-container">
            <table class="skills-table platform-tools-table">
                <thead>
                    <tr>
                        <th class="col-tool">{{ 'integration.tool_name'|trans|default('Tool') }}</th>
                        <th class="col-category hide-mobile">{{ 'integration.category'|trans|default('Category') }}</th>
                        <th class="col-description hide-tablet">{{ 'integration.description'|trans|default('Description') }}</th>
                        <th class="col-toggle">{{ 'integration.enabled'|trans|default('Enabled') }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for skill in platformSkills %}
                        {% for tool in skill.tools %}
                            <tr class="tool-row">
                                <td class="col-tool">
                                    <code class="tool-name">{{ tool.name }}</code>
                                    <div class="tool-description-mobile show-tablet">{{ tool.description|length > 80 ? tool.description|slice(0, 80) ~ '...' : tool.description }}</div>
                                </td>
                                <td class="col-category hide-mobile">
                                    <span class="badge badge-category">{{ skill.name }}</span>
                                </td>
                                <td class="col-description hide-tablet">
                                    <span class="tool-description" title="{{ tool.description }}">{{ tool.description|length > 100 ? tool.description|slice(0, 100) ~ '...' : tool.description }}</span>
                                </td>
                                <td class="col-toggle">
                                    <label class="tool-toggle">
                                        <input type="checkbox"
                                               {% if tool.enabled %}checked{% endif %}
                                               data-integration="{{ skill.type }}"
                                               data-instance="{{ skill.instanceId|default('') }}"
                                               data-tool="{{ tool.name }}"
                                               onchange="toggleTool(this)">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="form-actions">
            <a href="{{ path('app_skills') }}" class="btn btn-primary">
                <i class="fas fa-check"></i> {{ 'action.done'|trans|default('Done') }}
            </a>
        </div>
    </div>
</div>

<style>
.platform-skills-container {
    max-width: 1100px;
    margin: 2rem auto;
    padding: 0 1rem;
}

.platform-skills-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
}

.header-content {
    flex: 1;
}

.platform-skills-header h1 {
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 0.5rem 0;
}

.page-description {
    font-size: 0.95rem;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.5;
}

/* Table styles */
.table-container {
    background: var(--card-background);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 1.5rem;
}

.platform-tools-table {
    width: 100%;
    border-collapse: collapse;
}

.platform-tools-table thead {
    background: var(--secondary-background);
    border-bottom: 1px solid var(--border-color);
}

.platform-tools-table th {
    padding: 0.75rem 1rem;
    text-align: left;
    font-weight: 600;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-secondary);
}

.platform-tools-table td {
    padding: 0.5rem 0.75rem;
    border-bottom: 1px solid var(--border-color);
    vertical-align: middle;
}

.platform-tools-table tbody tr:last-child td {
    border-bottom: none;
}

.platform-tools-table tbody tr:hover {
    background: var(--secondary-background);
}

/* Column widths */
.col-toggle { width: 60px; text-align: center; }
.col-tool { width: 180px; }
.col-category { width: 150px; }
.col-description { width: auto; max-width: 400px; }

/* Toggle switch */
.tool-toggle {
    position: relative;
    display: inline-block;
    width: 40px;
    height: 22px;
    cursor: pointer;
}

.tool-toggle input {
    opacity: 0;
    width: 0;
    height: 0;
}

.toggle-slider {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--border-color);
    border-radius: 22px;
    transition: 0.3s;
}

.toggle-slider:before {
    position: absolute;
    content: "";
    height: 16px;
    width: 16px;
    left: 3px;
    bottom: 3px;
    background-color: white;
    border-radius: 50%;
    transition: 0.3s;
}

.tool-toggle input:checked + .toggle-slider {
    background-color: var(--primary-color);
}

.tool-toggle input:checked + .toggle-slider:before {
    transform: translateX(18px);
}

/* Tool name */
.tool-name {
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', monospace;
    font-size: 0.8rem;
    padding: 0.2rem 0.5rem;
    background: var(--secondary-background);
    border-radius: 4px;
    color: var(--text-primary);
    display: inline-block;
}

/* Category badge */
.badge-category {
    display: inline-block;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: 500;
    background: rgba(var(--primary-color-rgb, 255, 107, 53), 0.15);
    color: var(--primary-color);
    white-space: nowrap;
}

/* Description */
.tool-description {
    font-size: 0.8rem;
    color: var(--text-secondary);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.tool-description-mobile {
    display: none;
    font-size: 0.75rem;
    color: var(--text-secondary);
    margin-top: 0.25rem;
    line-height: 1.3;
}

/* Form actions */
.form-actions {
    display: flex;
    gap: 1rem;
}

.btn {
    padding: 0.625rem 1.25rem;
    border: none;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s;
}

.btn-primary {
    background: var(--primary-color);
    color: white;
}

.btn-primary:hover {
    background: var(--primary-color-dark);
}

.btn-secondary {
    background: var(--secondary-background);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
}

.btn-secondary:hover {
    background: var(--border-color);
}

/* Responsive visibility */
.hide-mobile { display: table-cell; }
.hide-tablet { display: table-cell; }
.show-tablet { display: none; }

@media (max-width: 900px) {
    .hide-tablet { display: none; }
    .show-tablet { display: block; }
}

@media (max-width: 640px) {
    .platform-skills-container {
        padding: 0 0.5rem;
    }

    .platform-skills-header {
        flex-direction: column;
        gap: 1rem;
    }

    .platform-skills-header .btn-secondary {
        align-self: flex-start;
    }

    .hide-mobile { display: none; }

    .platform-tools-table th,
    .platform-tools-table td {
        padding: 0.5rem 0.75rem;
    }

    .col-toggle { width: 50px; }
    .col-tool { width: auto; }

    .tool-name {
        font-size: 0.75rem;
        padding: 0.15rem 0.4rem;
    }
}
</style>

<script>
// Tool toggle functionality
async function toggleTool(checkbox) {
    const integration = checkbox.dataset.integration;
    const instance = checkbox.dataset.instance || '';
    const tool = checkbox.dataset.tool;
    const enabled = checkbox.checked;

    try {
        const response = await fetch(`/skills/${integration}/toggle-tool`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: `tool=${encodeURIComponent(tool)}&enabled=${enabled}&instance=${encodeURIComponent(instance)}`
        });

        if (!response.ok) {
            throw new Error('Failed to toggle tool');
        }
    } catch (error) {
        console.error('Error toggling tool:', error);
        checkbox.checked = !checkbox.checked;
        alert('{{ 'integration.toggle_error'|trans|default('Failed to update tool setting') }}');
    }
}
</script>
{% endblock %}
