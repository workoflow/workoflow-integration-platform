<script>
document.addEventListener('DOMContentLoaded', function() {
    // Find the URL input field for Confluence integration
    const urlInput = document.querySelector('input[id*="url"]');
    if (!urlInput) return;

    // Create feedback element
    const feedbackDiv = document.createElement('div');
    feedbackDiv.className = 'url-validation-feedback';
    urlInput.parentNode.insertBefore(feedbackDiv, urlInput.nextSibling);

    function validateConfluenceUrl(url) {
        if (!url || url.trim() === '') {
            return { valid: false, message: '', type: 'none' };
        }

        // Check if it's a valid URL format
        try {
            const urlObj = new URL(url);

            // Must be HTTPS
            if (urlObj.protocol !== 'https:') {
                return {
                    valid: false,
                    message: 'Confluence URL must use HTTPS protocol',
                    type: 'error'
                };
            }

            // Must have a hostname
            if (!urlObj.hostname) {
                return {
                    valid: false,
                    message: 'Please enter a valid domain name',
                    type: 'error'
                };
            }

            // Check if URL contains /wiki path - this is incorrect
            const haswiki = urlObj.pathname.includes('/wiki');

            if (haswiki) {
                return {
                    valid: false,
                    message: 'Please remove /wiki from the URL - enter only the base URL (e.g., https://your-domain.atlassian.net)',
                    type: 'error'
                };
            }

            // Valid URL without /wiki
            return {
                valid: true,
                message: 'URL format is correct',
                type: 'valid'
            };

        } catch (e) {
            return {
                valid: false,
                message: 'Please enter a valid URL (e.g., https://your-domain.atlassian.net)',
                type: 'error'
            };
        }
    }

    function updateValidationFeedback(result) {
        // Remove all validation classes
        urlInput.classList.remove('url-valid', 'url-warning', 'url-error');
        feedbackDiv.classList.remove('valid', 'warning', 'error');
        feedbackDiv.style.display = 'none';

        if (result.type === 'none') {
            return;
        }

        // Add appropriate classes
        if (result.type === 'valid') {
            urlInput.classList.add('url-valid');
            feedbackDiv.classList.add('valid');
            feedbackDiv.innerHTML = '<i class="fas fa-check-circle"></i><span>' + result.message + '</span>';
        } else if (result.type === 'warning') {
            urlInput.classList.add('url-warning');
            feedbackDiv.classList.add('warning');
            feedbackDiv.innerHTML = '<i class="fas fa-exclamation-triangle"></i><span>' + result.message + '</span>';
        } else if (result.type === 'error') {
            urlInput.classList.add('url-error');
            feedbackDiv.classList.add('error');
            feedbackDiv.innerHTML = '<i class="fas fa-times-circle"></i><span>' + result.message + '</span>';
        }

        feedbackDiv.style.display = 'flex';
    }

    // Validate on blur
    urlInput.addEventListener('blur', function() {
        const result = validateConfluenceUrl(this.value);
        updateValidationFeedback(result);
    });

    // Validate on input (with debounce)
    let inputTimeout;
    urlInput.addEventListener('input', function() {
        clearTimeout(inputTimeout);
        inputTimeout = setTimeout(() => {
            const result = validateConfluenceUrl(this.value);
            updateValidationFeedback(result);
        }, 500);
    });

    // Validate on page load if there's an existing value
    if (urlInput.value) {
        const result = validateConfluenceUrl(urlInput.value);
        updateValidationFeedback(result);
    }
});

// Tool toggle functionality
async function toggleTool(checkbox) {
    const integration = checkbox.dataset.integration;
    const instance = checkbox.dataset.instance || '';
    const tool = checkbox.dataset.tool;
    const enabled = checkbox.checked;

    try {
        const response = await fetch(`/skills/${integration}/toggle-tool`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: `tool=${encodeURIComponent(tool)}&enabled=${enabled}&instance=${encodeURIComponent(instance)}`
        });

        if (!response.ok) {
            throw new Error('Failed to toggle tool');
        }
    } catch (error) {
        console.error('Error toggling tool:', error);
        checkbox.checked = !checkbox.checked;
        alert('{{ 'integration.toggle_error'|trans|default('Failed to update tool setting') }}');
    }
}

// Conditional field visibility based on select values (e.g., auth_mode)
document.addEventListener('DOMContentLoaded', function() {
    const authModeSelects = document.querySelectorAll('.auth-mode-select');
    const conditionalFields = document.querySelectorAll('.conditional-field');
    const authInstructions = document.querySelector('[data-auth-instructions="true"]');
    const submitButton = document.getElementById('submit-button');

    function updateSubmitButton(authMode) {
        if (!submitButton) return;

        const integrationType = submitButton.dataset.integrationType;
        const labelSave = submitButton.dataset.labelSave;
        const labelAtlassian = submitButton.dataset.labelAtlassian;
        const labelMicrosoft = submitButton.dataset.labelMicrosoft;
        const labelHubspot = submitButton.dataset.labelHubspot;

        // Determine if OAuth mode is selected
        const isOAuthMode = authMode === 'oauth' || authMode === 'user_delegation';

        if (isOAuthMode) {
            // Show OAuth-specific button based on integration type
            if (integrationType === 'hubspot') {
                submitButton.innerHTML = '<i class="fab fa-hubspot"></i> ' + labelHubspot;
            } else if (integrationType === 'jira' || integrationType === 'confluence') {
                submitButton.innerHTML = '<i class="fab fa-atlassian"></i> ' + labelAtlassian;
            } else if (integrationType === 'sap_c4c' || integrationType === 'sap_sac') {
                submitButton.innerHTML = '<i class="fab fa-microsoft"></i> ' + labelMicrosoft;
            } else {
                submitButton.innerHTML = '<i class="fab fa-microsoft"></i> ' + labelMicrosoft;
            }
        } else {
            // Show standard save button
            submitButton.innerHTML = labelSave;
        }
    }

    function updateConditionalFields() {
        // Get current auth mode value
        const authModeSelect = document.querySelector('[data-field="auth_mode"]');
        const currentAuthMode = authModeSelect ? authModeSelect.value : 'basic';

        // Update conditional form fields
        conditionalFields.forEach(field => {
            const conditionalOn = field.dataset.conditionalOn;
            const conditionalValue = field.dataset.conditionalValue;

            if (!conditionalOn) return;

            // Find the controlling select element
            const controllingSelect = document.querySelector(`[data-field="${conditionalOn}"], #integration_config_${conditionalOn}`);
            if (!controllingSelect) return;

            const currentValue = controllingSelect.value;
            const shouldShow = currentValue === conditionalValue;

            // Show/hide the field
            field.style.display = shouldShow ? 'block' : 'none';

            // Enable/disable the input to prevent submitting hidden fields
            const input = field.querySelector('input, select, textarea');
            if (input) {
                input.disabled = !shouldShow;
            }
        });

        // Update setup instructions visibility based on auth mode
        if (authInstructions) {
            const authOptions = authInstructions.querySelectorAll('.auth-option[data-auth-mode]');
            authOptions.forEach(option => {
                const optionMode = option.dataset.authMode;
                option.style.display = optionMode === currentAuthMode ? 'block' : 'none';
            });
        }

        // Update submit button based on auth mode
        updateSubmitButton(currentAuthMode);
    }

    // Attach change handlers to all auth mode selects
    authModeSelects.forEach(select => {
        select.addEventListener('change', updateConditionalFields);
    });

    // Initial update on page load
    updateConditionalFields();
});
</script>
