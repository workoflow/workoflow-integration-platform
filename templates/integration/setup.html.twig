{% extends 'base.html.twig' %}

{% block title %}{{ 'integration.setup'|trans }} {{ integration.getName() }} - Workoflow{% endblock %}

{% block body %}
<div class="integrations-page">

    <div class="setup-container">
        <div class="setup-card">
            <div class="setup-header">
                <h1>{{ 'integration.setup'|trans }} {{ integration.getName() }}</h1>
                <p class="setup-description">
                    {{ 'integration.setup_description'|trans({'%name%': integration.getName()})|default('Configure your ' ~ integration.getName() ~ ' integration') }}
                </p>
            </div>

            {% if integration.isExperimental() %}
                <div class="alert alert-experimental">
                    <i class="fas fa-flask"></i>
                    <div class="alert-experimental-content">
                        <strong>{{ 'status.experimental'|trans }}</strong>
                        <p>{{ 'integration.experimental_notice'|trans|default('This skill is still in development. Features may change and some functionality might not work as expected.') }}</p>
                    </div>
                </div>
            {% endif %}

            {% if integration.getSetupInstructions() %}
                <div class="alert alert-info setup-instructions-container">
                    {{ integration.getSetupInstructions()|raw }}
                </div>
            {% endif %}

            {% if existingInstances|length > 0 and not isEdit %}
                <div class="existing-instances">
                    <p class="instances-info">
                        {{ 'integration.existing_instances'|trans|default('You already have %count% %name% integration(s)')|replace({'%count%': existingInstances|length, '%name%': integration.getName()}) }}
                    </p>
                    <ul class="instances-list">
                        {% for instance in existingInstances %}
                            <li>{{ instance.name }} {% if instance.active %}<span class="badge badge-success">Active</span>{% endif %}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            {{ form_start(form, {'attr': {'class': 'setup-form'}}) }}

                {# Display global form errors #}
                {% if form.vars.errors|length > 0 %}
                    <div class="alert alert-danger">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}

                <div class="form-group {% if form.name.vars.errors|length > 0 %}has-error{% endif %}">
                    <label for="integration_config_name">
                        {{ 'integration.instance_name'|trans|default('Instance Name') }} <span class="required">*</span>
                    </label>
                    <span class="field-hint">{{ 'integration.instance_name_hint'|trans|default('A friendly name to identify this integration instance (e.g., "Production Jira", "Dev SharePoint")') }}</span>
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'integration.instance_name_placeholder'|trans|default('e.g., Production ' ~ integration.getName())}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <h3>{{ 'integration.credentials'|trans|default('Credentials') }}</h3>

                {% set hasOAuthField = false %}
                {% set oauthFieldApplicable = false %}
                {% for field in credentialFields %}
                    {% if field.getType() == 'oauth' %}
                        {% set hasOAuthField = true %}
                        {% set isConditionalOAuth = field.isConditional() %}
                        {% set showOAuthField = not isConditionalOAuth %}
                        {% if isConditionalOAuth %}
                            {# For conditional OAuth fields (like sap_c4c user_delegation), only show if auth_mode matches #}
                            {% set currentAuthMode = form.vars.data[field.getConditionalOn()]|default('basic') %}
                            {% set showOAuthField = currentAuthMode == field.getConditionalValue() %}
                        {% endif %}
                        {# Track if OAuth is actually applicable (for button logic) #}
                        {% if showOAuthField %}
                            {% set oauthFieldApplicable = true %}
                        {% endif %}

                        {% if showOAuthField %}
                        {% if config and config.id %}
                            {# Show OAuth connection button only after initial save #}
                            <div class="oauth-section{% if isConditionalOAuth %} conditional-field{% endif %}"
                                 {% if isConditionalOAuth %}
                                     data-conditional-on="{{ field.getConditionalOn() }}"
                                     data-conditional-value="{{ field.getConditionalValue() }}"
                                 {% endif %}>
                                <div class="alert alert-info">
                                    <h4>{{ field.getLabel() }}</h4>
                                    <p>{{ field.getHint() }}</p>
                                </div>
                                {# Check for Azure tokens for SAP integrations #}
                                {% set hasAzureTokens = false %}
                                {% if integration.getType() in ['sap_c4c', 'sap_sac'] %}
                                    {% set hasAzureTokens = form.vars.data['azure_refresh_token'] is defined and form.vars.data['azure_refresh_token'] %}
                                {% endif %}
                                {# Check for Atlassian OAuth tokens #}
                                {% set hasAtlassianTokens = false %}
                                {% if integration.getType() in ['jira', 'confluence'] %}
                                    {% set hasAtlassianTokens = form.vars.data['access_token'] is defined and form.vars.data['access_token'] and form.vars.data['cloud_id'] is defined and form.vars.data['cloud_id'] %}
                                {% endif %}
                                {% if config.encryptedCredentials and (integration.getType() not in ['sap_c4c', 'sap_sac', 'jira', 'confluence'] or hasAzureTokens or hasAtlassianTokens) %}
                                    <div class="oauth-status connected">
                                        <i class="fas fa-check-circle"></i>
                                        {% if integration.getType() == 'hubspot' %}
                                            <span>{{ 'status.connected_hubspot'|trans|default('Connected to HubSpot') }}</span>
                                        {% elseif integration.getType() == 'sap_c4c' %}
                                            <span>{{ 'status.connected_azure'|trans|default('Connected via Azure AD') }}</span>
                                        {% elseif integration.getType() == 'sap_sac' %}
                                            <span>{{ 'status.connected_azure'|trans|default('Connected via Azure AD') }}</span>
                                        {% elseif integration.getType() in ['jira', 'confluence'] %}
                                            <span>{{ 'status.connected_atlassian'|trans|default('Connected to Atlassian') }}{% if form.vars.data['site_name'] is defined and form.vars.data['site_name'] %} ({{ form.vars.data['site_name'] }}){% endif %}</span>
                                        {% else %}
                                            <span>{{ 'status.connected'|trans|default('Connected to Microsoft') }}</span>
                                        {% endif %}
                                    </div>
                                    {% if integration.getType() == 'hubspot' %}
                                        <a href="{{ path('app_tool_oauth_hubspot_start', {configId: config.id}) }}"
                                           class="btn btn-secondary"
                                           onclick="return confirm('{{ 'integration.oauth_reconnect_confirm'|trans|default('This will replace your existing connection. Continue?') }}');">
                                            <i class="fab fa-hubspot"></i> {{ 'integration.reconnect_hubspot'|trans|default('Reconnect with HubSpot') }}
                                        </a>
                                    {% elseif integration.getType() == 'sap_c4c' %}
                                        <a href="{{ path('app_tool_oauth_sap_c4c_start', {configId: config.id}) }}"
                                           class="btn btn-secondary"
                                           onclick="return confirm('{{ 'integration.oauth_reconnect_confirm'|trans|default('This will replace your existing connection. Continue?') }}');">
                                            <i class="fab fa-microsoft"></i> {{ 'integration.reconnect_azure'|trans|default('Reconnect with Azure AD') }}
                                        </a>
                                    {% elseif integration.getType() == 'sap_sac' %}
                                        <a href="{{ path('app_tool_oauth_sap_sac_start', {configId: config.id}) }}"
                                           class="btn btn-secondary"
                                           onclick="return confirm('{{ 'integration.oauth_reconnect_confirm'|trans|default('This will replace your existing connection. Continue?') }}');">
                                            <i class="fab fa-microsoft"></i> {{ 'integration.reconnect_azure'|trans|default('Reconnect with Azure AD') }}
                                        </a>
                                    {% elseif integration.getType() in ['jira', 'confluence'] %}
                                        <a href="{{ path('app_tool_oauth_atlassian_start', {configId: config.id}) }}"
                                           class="btn btn-secondary"
                                           onclick="return confirm('{{ 'integration.oauth_reconnect_confirm'|trans|default('This will replace your existing connection. Continue?') }}');">
                                            <i class="fab fa-atlassian"></i> {{ 'integration.reconnect_atlassian'|trans|default('Reconnect with Atlassian') }}
                                        </a>
                                    {% else %}
                                        <a href="{{ path('app_tool_oauth_microsoft_start', {configId: config.id}) }}"
                                           class="btn btn-secondary"
                                           onclick="return confirm('{{ 'integration.oauth_reconnect_confirm'|trans|default('This will replace your existing connection. Continue?') }}');">
                                            <i class="fab fa-microsoft"></i> {{ 'integration.reconnect_microsoft'|trans|default('Reconnect with Microsoft') }}
                                        </a>
                                    {% endif %}
                                {% else %}
                                    <div class="oauth-status disconnected">
                                        <i class="fas fa-times-circle"></i>
                                        <span>{{ 'status.not_connected'|trans|default('Not connected') }}</span>
                                    </div>
                                    {% if integration.getType() == 'hubspot' %}
                                        <a href="{{ path('app_tool_oauth_hubspot_start', {configId: config.id}) }}"
                                           class="btn btn-primary">
                                            <i class="fab fa-hubspot"></i> {{ field.getLabel() }}
                                        </a>
                                    {% elseif integration.getType() == 'sap_c4c' %}
                                        <a href="{{ path('app_tool_oauth_sap_c4c_start', {configId: config.id}) }}"
                                           class="btn btn-primary">
                                            <i class="fab fa-microsoft"></i> {{ field.getLabel() }}
                                        </a>
                                    {% elseif integration.getType() == 'sap_sac' %}
                                        <a href="{{ path('app_tool_oauth_sap_sac_start', {configId: config.id}) }}"
                                           class="btn btn-primary">
                                            <i class="fab fa-microsoft"></i> {{ field.getLabel() }}
                                        </a>
                                    {% elseif integration.getType() in ['jira', 'confluence'] %}
                                        <a href="{{ path('app_tool_oauth_atlassian_start', {configId: config.id}) }}"
                                           class="btn btn-primary">
                                            <i class="fab fa-atlassian"></i> {{ field.getLabel() }}
                                        </a>
                                    {% else %}
                                        <a href="{{ path('app_tool_oauth_microsoft_start', {configId: config.id}) }}"
                                           class="btn btn-primary">
                                            <i class="fab fa-microsoft"></i> {{ field.getLabel() }}
                                        </a>
                                    {% endif %}
                                {% endif %}
                            </div>
                        {% else %}
                            {# Show info message for new configs #}
                            <div class="alert alert-info{% if isConditionalOAuth %} conditional-field{% endif %}"
                                 {% if isConditionalOAuth %}
                                     data-conditional-on="{{ field.getConditionalOn() }}"
                                     data-conditional-value="{{ field.getConditionalValue() }}"
                                 {% endif %}>
                                <h4>{{ field.getLabel() }}</h4>
                                <p>{{ field.getHint() }}</p>
                                {% if integration.getType() == 'hubspot' %}
                                    <p><strong>{{ 'integration.oauth_required_hubspot'|trans|default('HubSpot authorization is required. Click "Connect with HubSpot" below to continue.') }}</strong></p>
                                {% elseif integration.getType() in ['sap_c4c', 'sap_sac'] %}
                                    <p><strong>{{ 'integration.oauth_required_azure'|trans|default('Save this configuration first, then click "Connect with Azure AD" to authorize.') }}</strong></p>
                                {% elseif integration.getType() in ['jira', 'confluence'] %}
                                    <p><strong>{{ 'integration.oauth_required_atlassian'|trans|default('Save this configuration first, then click "Connect with Atlassian" to authorize.') }}</strong></p>
                                {% else %}
                                    <p><strong>{{ 'integration.oauth_required'|trans|default('Microsoft authorization is required. Click "Connect with Microsoft" below to continue.') }}</strong></p>
                                {% endif %}
                            </div>
                        {% endif %}
                        {% endif %}
                    {% else %}
                        {% set fieldName = field.getName() %}
                        {% set isSensitiveField = fieldName in ['api_token', 'password', 'client_secret', 'c4c_oauth_client_secret'] %}
                        {% set fieldExists = form.vars.data[fieldName ~ '_exists']|default(false) %}
                        {% set isSelectField = field.getType() == 'select' %}
                        {% set isConditionalField = field.isConditional() %}

                        <div class="form-group {% if form[fieldName].vars.errors|length > 0 %}has-error{% endif %}{% if isConditionalField %} conditional-field{% endif %}"
                             {% if isConditionalField %}
                                 data-conditional-on="{{ field.getConditionalOn() }}"
                                 data-conditional-value="{{ field.getConditionalValue() }}"
                             {% endif %}>
                            <label for="integration_config_{{ fieldName }}">
                                {{ field.getLabel() }}
                                {% if field.isRequired() and (not isEdit or not isSensitiveField) and not isConditionalField %}
                                    <span class="required">*</span>
                                {% endif %}
                            </label>
                            {% if field.getHint() %}
                                <span class="field-hint">{{ field.getHint()|raw }}</span>
                            {% endif %}

                            {% if isSelectField and field.getOptions() %}
                                <select name="integration_config[{{ fieldName }}]" id="integration_config_{{ fieldName }}" class="form-control auth-mode-select" data-field="{{ fieldName }}">
                                    {% for value, label in field.getOptions() %}
                                        <option value="{{ value }}"{% if form.vars.data[fieldName]|default(field.getPlaceholder()) == value %} selected{% endif %}>{{ label }}</option>
                                    {% endfor %}
                                </select>
                                {# Mark the Symfony form field as rendered so form_end doesn't render it again #}
                                {% do form[fieldName].setRendered %}
                            {% elseif isSensitiveField and fieldExists and isEdit %}
                                {{ form_widget(form[fieldName], {'attr': {'class': 'form-control', 'placeholder': 'integration.keep_existing'|trans|default('Leave empty to keep existing value')}}) }}
                                <small class="form-text text-muted">
                                    <i class="fas fa-lock"></i> {{ 'integration.credential_exists'|trans|default('Current value is stored securely. Leave empty to keep it.') }}
                                </small>
                            {% else %}
                                {{ form_widget(form[fieldName], {'attr': {'class': 'form-control', 'placeholder': field.getPlaceholder()}}) }}
                            {% endif %}
                            {{ form_errors(form[fieldName]) }}

                            {% if integration.getType() == 'projektron' and fieldName == 'csrf_token' %}
                                <div class="alert alert-session-warning">
                                    <i class="fas fa-clock"></i>
                                    <p>{{ 'integration.projektron_session_notice'|trans|default('These values automatically expire after a day, or if you recreate your Projektron session. Ensure to recently update them before using the skill. Please excuse the inconvenience.') }}</p>
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                {% endfor %}

                {% if isEdit and config %}
                    <h3>{{ 'integration.available_tools'|trans|default('Available Tools') }}</h3>
                    <p class="field-hint">{{ 'integration.tools_hint'|trans|default('Enable or disable specific tools that this integration provides') }}</p>

                    <div class="tools-management">
                        {% for tool in integration.getTools() %}
                            <div class="tool-item">
                                <div class="tool-toggle-wrapper">
                                    <label class="tool-toggle">
                                        <input type="checkbox"
                                               {% if not config.isToolDisabled(tool.getName()) %}checked{% endif %}
                                               data-integration="{{ integration.getType() }}"
                                               data-instance="{{ config.id }}"
                                               data-tool="{{ tool.getName() }}"
                                               onchange="toggleTool(this)">
                                        <span class="toggle-slider"></span>
                                    </label>
                                </div>
                                <div class="tool-details">
                                    <div class="tool-name">{{ tool.getName() }}</div>
                                    <div class="tool-description">{{ tool.getDescription() }}</div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}

                {% if isEdit and config and integration.getSystemPrompt is defined %}
                    <h3>{{ 'integration.system_prompt'|trans|default('System Prompt') }}</h3>
                    <p class="field-hint">{{ 'integration.system_prompt_hint'|trans|default('AI agent system prompt for this integration. This defines how the AI will interact with this skill.') }}</p>

                    <details class="system-prompt-details">
                        <summary class="system-prompt-summary">
                            <span>{{ 'integration.view_system_prompt'|trans|default('Click to view/hide system prompt XML') }}</span>
                        </summary>
                        <div class="system-prompt-content">
                            <pre><code class="language-xml">{{ integration.getSystemPrompt(config)|e }}</code></pre>
                        </div>
                    </details>
                {% endif %}

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary" id="submit-button"
                            data-integration-type="{{ integration.getType() }}"
                            data-label-save="{{ 'integration.save_configuration'|trans|default('Save Configuration') }}"
                            data-label-atlassian="{{ 'integration.connect_atlassian'|trans|default('Connect with Atlassian') }}"
                            data-label-microsoft="{{ 'integration.connect_microsoft'|trans|default('Connect with Microsoft') }}"
                            data-label-hubspot="{{ 'integration.connect_hubspot'|trans|default('Connect with HubSpot') }}">
                        {% if oauthFieldApplicable and not config %}
                            {% if integration.getType() == 'hubspot' %}
                                <i class="fab fa-hubspot"></i> {{ 'integration.connect_hubspot'|trans|default('Connect with HubSpot') }}
                            {% elseif integration.getType() in ['jira', 'confluence'] %}
                                <i class="fab fa-atlassian"></i> {{ 'integration.connect_atlassian'|trans|default('Connect with Atlassian') }}
                            {% else %}
                                <i class="fab fa-microsoft"></i> {{ 'integration.connect_microsoft'|trans|default('Connect with Microsoft') }}
                            {% endif %}
                        {% else %}
                            {{ 'integration.save_configuration'|trans|default('Save Configuration') }}
                        {% endif %}
                    </button>
                    <a href="{{ path('app_skills') }}" class="btn btn-secondary">
                        {{ 'action.cancel'|trans }}
                    </a>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

<style>
.setup-container {
    max-width: 600px;
    margin: 2rem auto;
    padding: 0 1rem;
}

.setup-card {
    background: var(--card-background);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 2rem;
}

.setup-header {
    margin-bottom: 2rem;
}

.setup-header h1 {
    margin: 0 0 0.5rem 0;
}

.setup-description {
    color: var(--text-secondary);
    margin: 0;
}

.setup-form h3 {
    margin: 2rem 0 1rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--border-color);
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
}

.field-hint {
    display: block;
    font-size: 0.875rem;
    color: var(--text-secondary);
    font-weight: normal;
    margin-top: 0.25rem;
}

.field-hint a {
    color: var(--primary-color, #3b82f6);
    text-decoration: none;
    font-weight: 500;
}

.field-hint a:hover {
    text-decoration: underline;
}

/* Asterisk styling - normal color by default */
span.required {
    color: var(--text-secondary);
    margin-left: 0.25rem;
}

/* Red asterisk only when form-group has error */
.form-group.has-error span.required {
    color: var(--danger-color);
}

/* Reset label color even if it has required class */
label.required {
    color: var(--text-primary);
}

.form-control {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    background: var(--input-background);
    color: var(--text-primary);
    font-size: 1rem;
}

.form-control:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(var(--primary-color-rgb), 0.1);
}

.form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
}

.btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: all 0.2s;
}

.btn-primary {
    background: var(--primary-color);
    color: white;
}

.btn-primary:hover {
    background: var(--primary-color-dark);
}

.btn-secondary {
    background: var(--secondary-background);
    color: var(--text-primary);
}

.btn-secondary:hover {
    background: var(--secondary-background-dark);
}

.existing-instances {
    background: var(--info-background, #1a2332);
    border: 1px solid var(--info-border, #3b82f6);
    border-radius: 4px;
    padding: 1rem;
    margin-bottom: 1.5rem;
}

.instances-info {
    margin: 0 0 0.5rem 0;
    font-weight: 500;
    color: var(--info-text, #93bbfc);
}

.instances-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.instances-list li {
    padding: 0.5rem 0;
    border-top: 1px solid rgba(59, 130, 246, 0.2);
    color: var(--text-primary);
}

.instances-list li:first-child {
    border-top: none;
}

.badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    border-radius: 3px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
}

.badge-success {
    background: var(--success-color, #10b981);
    color: white;
}

/* Tools management section */
.tools-management {
    margin-top: 1rem;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    overflow: hidden;
}

.tool-item {
    display: flex;
    align-items: center;
    padding: 1rem;
    border-bottom: 1px solid var(--border-color);
    background: var(--card-background);
    transition: background-color 0.2s;
}

.tool-item:last-child {
    border-bottom: none;
}

.tool-item:hover {
    background: var(--secondary-background);
}

.tool-toggle-wrapper {
    margin-right: 1rem;
    flex-shrink: 0;
}

.tool-toggle {
    position: relative;
    display: inline-block;
    width: 44px;
    height: 24px;
    cursor: pointer;
}

.tool-toggle input {
    opacity: 0;
    width: 0;
    height: 0;
}

.toggle-slider {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: var(--border-color);
    border-radius: 24px;
    transition: 0.3s;
}

.toggle-slider:before {
    position: absolute;
    content: "";
    height: 18px;
    width: 18px;
    left: 3px;
    bottom: 3px;
    background-color: white;
    border-radius: 50%;
    transition: 0.3s;
}

.tool-toggle input:checked + .toggle-slider {
    background-color: var(--primary-color);
}

.tool-toggle input:checked + .toggle-slider:before {
    transform: translateX(20px);
}

.tool-details {
    flex: 1;
    min-width: 0;
}

.tool-name {
    font-weight: 500;
    font-size: 0.95rem;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
    font-family: 'Courier New', monospace;
}

.tool-description {
    font-size: 0.875rem;
    color: var(--text-secondary);
    line-height: 1.4;
}

.oauth-section {
    margin: 1.5rem 0;
}

.oauth-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem;
    border-radius: 4px;
    margin-bottom: 1rem;
    font-weight: 500;
}

.oauth-status.connected {
    background: var(--success-background, rgba(16, 185, 129, 0.1));
    color: var(--success-color, #10b981);
    border: 1px solid var(--success-color, #10b981);
}

.oauth-status.disconnected {
    background: var(--warning-background, rgba(251, 191, 36, 0.1));
    color: var(--warning-color, #fbbf24);
    border: 1px solid var(--warning-color, #fbbf24);
}

.oauth-status i {
    font-size: 1.25rem;
}

.alert {
    padding: 1rem;
    border-radius: 4px;
    margin-bottom: 1rem;
}

.alert-info {
    background: var(--info-background, #1a2332);
    border: 1px solid var(--info-border, #3b82f6);
    color: var(--info-text, #93bbfc);
}

.alert-info h4 {
    margin: 0 0 0.5rem 0;
    color: var(--info-text, #93bbfc);
}

.alert-info p {
    margin: 0.5rem 0 0 0;
}

.alert-info p:last-child {
    margin-bottom: 0;
}

.alert-danger {
    background: var(--danger-background, rgba(239, 68, 68, 0.1));
    border: 1px solid var(--danger-color, #ef4444);
    color: var(--danger-text, #fca5a5);
    padding: 1rem;
    border-radius: 4px;
    margin-bottom: 1rem;
}

.form-text {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.875rem;
}

.text-muted {
    color: var(--text-secondary);
}

.form-text i {
    margin-right: 0.25rem;
}

