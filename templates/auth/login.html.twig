{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.login.title'|trans }} - Workoflow{% endblock %}

{% block body %}
<div class="login-page">
    
    <div class="login-container">
        <div class="login-card">
                <div class="login-header">
                    <h2>Welcome Back</h2>
                    <p>{{ 'auth.login.subtitle'|trans }}</p>
                </div>

                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {# Google login temporarily disabled - replaced with Magic Link authentication #}
                {#
                <a href="{{ path('connect_google_start') }}" class="login-button">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    {{ 'auth.login.google'|trans }}
                </a>
                #}

                {# Magic Link Authentication Info #}
                <div class="magic-link-info">
                    <div class="info-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"></circle>
                            <path d="M12 16v-4"></path>
                            <path d="M12 8h.01"></path>
                        </svg>
                    </div>

                    <h3>Magic Link Authentication</h3>

                    <p class="info-text">
                        To access Workoflow, please use the <strong>Magic Link</strong> sent to you via:
                    </p>

                    <div class="channels-list">
                        <div class="channel-item">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M11.5 3C6.81 3 3 6.81 3 11.5S6.81 20 11.5 20h.5v3c4.86-2.34 8-7 8-11.5C20 6.81 16.19 3 11.5 3zm1 14.5h-2v-6h2v6zm0-8h-2v-2h2v2z"/>
                            </svg>
                            <span>Microsoft Teams</span>
                        </div>
                        <div class="channel-item">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
                            </svg>
                            <span>Other connected chat applications</span>
                        </div>
                    </div>

                    <div class="info-note">
                        <p>
                            The Magic Link will be valid for <strong>24 hours</strong> and can be used multiple times within that period.
                            If you haven't received your link, please contact your administrator.
                        </p>
                    </div>
                </div>

                <div class="login-footer">
                    {{ 'auth.login.privacy'|trans }}
                </div>
            </div>
    </div>
</div>
{% endblock %}