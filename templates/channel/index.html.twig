{% extends 'base.html.twig' %}

{% block title %}{{ 'channel.title'|trans }} - Workoflow{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .channel-page {
            min-height: 100vh;
            background-color: #0a0a0a;
            color: #ffffff;
        }

        .channel-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .page-title {
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 2rem;
            color: #ffffff;
        }

        .channel-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-top: 2rem;
        }

        .left-column, .right-column {
            background-color: #1a1a1a;
            border: 1px solid #2a2a2a;
            border-radius: 0.5rem;
            padding: 2rem;
        }

        .form-section {
            margin-bottom: 2rem;
        }

        .section-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #ff6b35;
        }

        .section-subtitle {
            font-size: 0.875rem;
            color: #9ca3af;
            margin-bottom: 1.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
            font-weight: 500;
            color: #ffffff;
        }

        .form-control {
            width: 100%;
            padding: 0.625rem 0.875rem;
            background-color: #0a0a0a;
            border: 1px solid #2a2a2a;
            border-radius: 0.375rem;
            color: #ffffff;
            font-size: 0.875rem;
            transition: all 0.2s;
        }

        .form-control:focus {
            outline: none;
            border-color: #ff6b35;
            box-shadow: 0 0 0 2px rgba(255, 107, 53, 0.2);
        }

        .form-control[readonly] {
            background-color: #1a1a1a;
            color: #9ca3af;
            cursor: not-allowed;
        }

        .form-select {
            width: 100%;
            padding: 0.625rem 0.875rem;
            background-color: #0a0a0a;
            border: 1px solid #2a2a2a;
            border-radius: 0.375rem;
            color: #ffffff;
            font-size: 0.875rem;
            cursor: pointer;
        }

        .form-textarea {
            width: 100%;
            min-height: 150px;
            padding: 0.875rem;
            background-color: #0a0a0a;
            border: 1px solid #2a2a2a;
            border-radius: 0.375rem;
            color: #ffffff;
            font-size: 0.875rem;
            resize: vertical;
            font-family: inherit;
        }

        .btn-primary {
            background-color: #ff6b35;
            color: #ffffff;
            padding: 0.625rem 1.5rem;
            border: none;
            border-radius: 0.375rem;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .btn-primary:hover {
            background-color: #e55a2b;
        }

        .btn-secondary {
            background-color: #2a2a2a;
            color: #ffffff;
            border: 1px solid #3a3a3a;
            border-radius: 0.375rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-secondary:hover {
            background-color: #3a3a3a;
            border-color: #ff6b35;
        }

        .workflow-canvas {
            background-color: #0a0a0a;
            border: 1px solid #2a2a2a;
            border-radius: 0.5rem;
            height: 800px;
            position: relative;
        }

        .workflow-placeholder, .workflow-loading, .workflow-error {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            color: #6b7280;
            font-size: 1rem;
        }

        .workflow-error {
            color: #ef4444;
            flex-direction: column;
            gap: 1rem;
        }

        #workflow-container {
            width: 100%;
            height: 100%;
            border-radius: 0.5rem;
            overflow: hidden;
        }

        n8n-demo {
            width: 100%;
            height: 100%;
            display: block;
            --n8n-workflow-min-height: 800px;
        }

        .hidden {
            display: none !important;
        }

        .spinner {
            border: 3px solid #2a2a2a;
            border-top: 3px solid #ff6b35;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin-bottom: 1rem;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        @media (max-width: 1024px) {
            .channel-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="channel-page">
    {% include '_partials/header.html.twig' %}

    <div class="channel-container" data-controller="channel">
        <h1 class="page-title">{{ 'channel.title'|trans }}</h1>

        {% if app.user.isAdmin() %}
            <div style="background-color: #1a1a1a; border: 1px solid #2a2a2a; border-radius: 0.5rem; padding: 1.5rem; margin-bottom: 2rem;">
                <div style="display: flex; justify-content: space-between; align-items: center;">
                    <div>
                        <h2 style="font-size: 1.25rem; font-weight: 600; margin-bottom: 0.5rem; color: #ff6b35;">
                            {{ 'channel.management'|trans }}
                        </h2>
                        <p style="font-size: 0.875rem; color: #9ca3af; margin: 0;">
                            {{ 'channel.management.description'|trans }}
                        </p>
                    </div>
                    <a href="{{ path('app_channel_create') }}"
                       class="btn-primary"
                       style="text-decoration: none; white-space: nowrap;">
                        + {{ 'channel.create.button'|trans }}
                    </a>
                </div>
            </div>
        {% endif %}

        <form method="post" action="{{ path('app_channel_update') }}" id="channel-form" data-action="submit->channel#submitForm">
            <div class="channel-grid">
                <!-- Left Column -->
                <div class="left-column">
                    <!-- Organisation Properties -->
                    <div class="form-section">
                        <div class="form-group">
                            <label for="name" class="form-label">{{ 'channel.organisation_name'|trans }}</label>
                            <input type="text"
                                   class="form-control"
                                   id="name"
                                   name="name"
                                   value="{{ organisation.name }}"
                                   {% if not app.user.isAdmin() %}readonly{% endif %}>
                        </div>

                        <div class="form-group">
                            <label for="uuid" class="form-label">{{ 'channel.uuid'|trans }}</label>
                            <input type="text"
                                   class="form-control"
                                   id="uuid"
                                   value="{{ organisation.uuid }}"
                                   readonly>
                        </div>

                        <div class="form-group">
                            <label for="workflow_user_id" class="form-label">{{ 'channel.workflow_user_id'|trans }}</label>
                            <input type="text"
                                   class="form-control"
                                   id="workflow_user_id"
                                   value="{{ userOrganisation.workflowUserId ?? 'Not set' }}"
                                   readonly>
                        </div>
                    </div>

                    <!-- Agent Settings -->
                    <div class="form-section">
                        <h2 class="section-title">{{ 'channel.agent_settings'|trans }}</h2>
                        <p class="section-subtitle">Describe the agent's role or personality. This sets the tone of how it responds.</p>

                        <div class="form-group">
                            <label for="system_prompt" class="form-label">System Prompt</label>
                            <textarea class="form-textarea"
                                      id="system_prompt"
                                      name="system_prompt"
                                      placeholder="Enter the agent's instructions and personality..."
                                      {% if not app.user.isAdmin() %}readonly{% endif %}>{{ userOrganisation.systemPrompt ?? '' }}</textarea>
                        </div>
                    </div>

                    <!-- Webhook Configuration -->
                    <div class="form-section">
                        <div class="form-group">
                            <label for="webhook_type" class="form-label">Webhook Type</label>
                            <select class="form-select"
                                    id="webhook_type"
                                    name="webhook_type"
                                    data-channel-target="webhookType"
                                    data-action="change->channel#onWebhookTypeChange"
                                    {% if not app.user.isAdmin() %}disabled{% endif %}>
                                <option value="">None</option>
                                <option value="COMMON" {% if organisation.webhookType == 'COMMON' %}selected{% endif %}>Common</option>
                                <option value="N8N" {% if organisation.webhookType == 'N8N' %}selected{% endif %}>N8N</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="webhook_url" class="form-label">Webhook URL</label>
                            <input type="url"
                                   class="form-control"
                                   id="webhook_url"
                                   name="webhook_url"
                                   data-channel-target="webhookUrl"
                                   data-action="input->channel#onWebhookUrlChange"
                                   value="{{ organisation.webhookUrl ?? '' }}"
                                   placeholder="http://localhost:5678/webhook/016d8b95-..."
                                   {% if not app.user.isAdmin() %}readonly{% endif %}>
                            <small class="form-text text-muted">Used by AI agents to trigger your workflow</small>
                        </div>

                        <div class="form-group" id="workflow-url-group" data-channel-target="workflowUrlGroup" style="{% if organisation.webhookType != 'N8N' %}display: none;{% endif %}">
                            <label for="workflow_url" class="form-label">Workflow URL</label>
                            <input type="url"
                                   class="form-control"
                                   id="workflow_url"
                                   name="workflow_url"
                                   data-channel-target="workflowUrl"
                                   data-action="input->channel#onWorkflowUrlChange"
                                   value="{{ organisation.workflowUrl ?? '' }}"
                                   placeholder="http://localhost:5678/workflow/xRYAqofSE2ljb0d5"
                                   {% if not app.user.isAdmin() %}readonly{% endif %}>
                            <small class="form-text text-muted">Copy from n8n editor address bar - used for visualization below</small>
                        </div>

                        <div class="form-group" id="n8n-api-key-group" data-channel-target="n8nApiKeyGroup" style="{% if organisation.webhookType != 'N8N' %}display: none;{% endif %}">
                            <label for="n8n_api_key" class="form-label">N8N API Key</label>
                            <input type="password"
                                   class="form-control"
                                   id="n8n_api_key"
                                   name="n8n_api_key"
                                   value="{{ organisation.n8nApiKey ?? '' }}"
                                   placeholder="Enter your N8N API key"
                                   {% if not app.user.isAdmin() %}readonly{% endif %}>
                            <small class="form-text text-muted">Required to fetch workflow details from N8N</small>
                        </div>
                    </div>

                    {% if app.user.isAdmin() %}
                        <button type="submit" class="btn-primary">Save Settings</button>
                    {% endif %}
                </div>

                <!-- Right Column -->
                <div class="right-column" id="workflow-column" data-channel-target="workflowColumn" {% if organisation.webhookType != 'N8N' %}class="hidden"{% endif %}>
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.5rem;">
                        <h2 class="section-title" style="margin-bottom: 0;">{{ 'channel.workflow_visualization'|trans }}</h2>
                        <button type="button"
                                class="btn-secondary"
                                data-action="click->channel#openWorkflowModal"
                                style="padding: 0.5rem 1rem; font-size: 0.875rem;">
                            <i class="fas fa-expand"></i> Enlarge
                        </button>
                    </div>
                    <p class="section-subtitle">Visual representation of your workflow (read-only)</p>

                    <div class="workflow-canvas">
                        <div id="workflow-loading" class="workflow-loading">
                            <div style="display: flex; flex-direction: column; align-items: center;">
                                <div class="spinner"></div>
                                <span>Loading workflow visualization...</span>
                            </div>
                        </div>

                        <div id="workflow-error" class="workflow-error hidden">
                            <span id="workflow-error-message">Failed to load workflow</span>
                            <button class="btn-primary" onclick="location.reload()">Retry</button>
                        </div>

                        <div id="workflow-placeholder" class="workflow-placeholder {% if organisation.workflowUrl %}hidden{% endif %}">
                            <span style="text-align: center; padding: 20px;">
                                Please configure the N8N Workflow URL above to view the workflow visualization.
                                {% if not app.user.isAdmin() %}
                                    <br><br>
                                    <small style="color: #9ca3af;">Contact an administrator to configure webhook settings.</small>
                                {% endif %}
                            </span>
                        </div>

                        <div id="workflow-container"
                             data-channel-target="workflowContainer"
                             data-org-id="{{ organisation.uuid }}"
                             data-workflow-url="{{ organisation.workflowUrl ?? '' }}"
                             class="{% if not organisation.workflowUrl %}hidden{% endif %}">
                            <n8n-demo id="workflow-viewer" theme="dark"></n8n-demo>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <!-- Fullscreen Workflow Modal -->
        <div id="workflow-modal" class="modal modal-fullscreen" data-channel-target="workflowModal">
            <div class="modal-content modal-fullscreen-content">
                <div class="modal-header">
                    <h3 class="modal-title">{{ 'channel.workflow_visualization'|trans }}</h3>
                    <button type="button"
                            class="modal-close"
                            data-action="click->channel#closeWorkflowModal">
                        ×
                    </button>
                </div>
                <div class="modal-body" style="padding: 0; flex: 1; overflow: hidden;">
                    <div id="modal-workflow-container" style="width: 100%; height: 100%;">
                        <n8n-demo id="modal-workflow-viewer" theme="dark"></n8n-demo>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
