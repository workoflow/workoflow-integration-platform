{% extends 'base.html.twig' %}

{% block title %}{{ 'profile.title'|trans }} - Workoflow{% endblock %}

{% block body %}
<div class="dashboard-page">
    
    <div class="dashboard-container">
        <h1 class="dashboard-title">{{ 'profile.title'|trans }}</h1>

        <div class="profile-section">
            <h2 class="section-title">{{ 'profile.personal_info'|trans }}</h2>
            
            <div class="info-grid">
                <div class="info-item">
                    <span class="info-label">{{ 'user.name'|trans }}</span>
                    <span class="info-value">{{ user.name }}</span>
                </div>

                <div class="info-item">
                    <span class="info-label">{{ 'user.email'|trans }}</span>
                    <span class="info-value">{{ user.email }}</span>
                </div>

                <div class="info-item">
                    <span class="info-label">{{ 'user.organisation'|trans }}</span>
                    <span class="info-value">{{ user.organisation ? user.organisation.name : '-' }}</span>
                </div>

                <div class="info-item">
                    <span class="info-label">{{ 'user.joined_at'|trans }}</span>
                    <span class="info-value">{{ user.createdAt|date('d.m.Y H:i') }}</span>
                </div>

                <div class="info-item">
                    <span class="info-label">{{ 'user.role'|trans }}</span>
                    <span class="info-value">
                        <span class="badge badge-{{ user.isAdmin() ? 'admin' : 'member' }}">
                            {{ user.isAdmin() ? 'Admin' : 'Member' }}
                        </span>
                    </span>
                </div>

                <div class="info-item">
                    <span class="info-label">{{ 'user.workflow_user_id'|trans }}</span>
                    <span class="info-value">{{ userOrganisation.workflowUserId ?? 'Not set' }}</span>
                </div>
            </div>
        </div>

        {# API Token Section #}
        <div class="profile-section api-token-section">
            <h2 class="section-title">{{ 'profile.api_token'|trans }}</h2>
            <p class="section-description">{{ 'profile.api_token_description'|trans }}</p>

            {% if newToken %}
                <div class="alert alert-success">
                    <strong>{{ 'profile.token_generated'|trans }}</strong>
                    <p>{{ 'profile.token_warning'|trans }}</p>
                    <div class="token-display">
                        <code id="newToken">{{ newToken }}</code>
                        <button type="button" class="btn btn-copy" onclick="copyToken(this)">
                            <i class="fas fa-copy"></i> {{ 'action.copy'|trans }}
                        </button>
                    </div>
                </div>
            {% endif %}

            <div class="token-status">
                {% if userOrganisation and userOrganisation.hasToken() %}
                    <div class="info-item">
                        <span class="info-label">{{ 'profile.token_status'|trans }}</span>
                        <span class="info-value">
                            <span class="badge badge-success">{{ 'profile.token_active'|trans }}</span>
                        </span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">{{ 'profile.token_created_at'|trans }}</span>
                        <span class="info-value">{{ userOrganisation.tokenCreatedAt|date('d.m.Y H:i') }}</span>
                    </div>
                {% else %}
                    <p class="no-token">{{ 'profile.no_token'|trans }}</p>
                {% endif %}
            </div>

            <form method="post" action="{{ path('app_profile_token_generate') }}" class="token-form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('generate-token') }}">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-key"></i>
                    {% if userOrganisation and userOrganisation.hasToken() %}
                        {{ 'profile.regenerate_token'|trans }}
                    {% else %}
                        {{ 'profile.generate_token'|trans }}
                    {% endif %}
                </button>
            </form>

            <div class="api-usage-hint">
                <h4>{{ 'profile.api_usage'|trans }}</h4>
                <p class="api-usage-description">{{ 'profile.api_usage_description'|trans }}</p>
                <div class="curl-example">
                    {% if userOrganisation and userOrganisation.hasToken() %}
                        <pre><code id="curlCommand">curl -H "X-Prompt-Token: {{ userOrganisation.personalAccessToken }}" {{ app.request.schemeAndHttpHost }}/api/prompts</code></pre>
                        <button type="button" class="btn btn-copy btn-sm" onclick="copyCurlCommand(this)">
                            <i class="fas fa-copy"></i> {{ 'action.copy'|trans }}
                        </button>
                    {% else %}
                        <pre><code>curl -H "X-Prompt-Token: YOUR_TOKEN" {{ app.request.schemeAndHttpHost }}/api/prompts</code></pre>
                        <p class="api-usage-note">{{ 'profile.generate_token_first'|trans }}</p>
                    {% endif %}
                </div>
                <div class="api-params-hint">
                    <h5>{{ 'profile.api_params'|trans }}</h5>
                    <ul>
                        <li><code>?scope=personal</code> - {{ 'profile.api_param_scope'|trans }}</li>
                        <li><code>?category=developer</code> - {{ 'profile.api_param_category'|trans }}</li>
                        <li><code>?uuid=...</code> - {{ 'profile.api_param_uuid'|trans }}</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="danger-zone">
            <h2 class="section-title danger-title">{{ 'profile.danger_zone'|trans }}</h2>
            <p class="danger-warning">{{ 'profile.delete_account_warning'|trans }}</p>
            
            <button type="button" class="btn btn-danger" onclick="showDeleteModal()">
                {{ 'profile.delete_account'|trans }}
            </button>
        </div>
    </div>
</div>

<!-- Delete Account Modal -->
<div class="modal" id="deleteModal">
    <div class="modal-content">
        <form method="post" action="{{ path('app_profile_delete') }}">
            <div class="modal-header">
                <h3 class="modal-title">{{ 'profile.delete_account'|trans }}</h3>
                <button type="button" class="modal-close" onclick="hideDeleteModal()">Ã—</button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger">
                    {{ 'profile.delete_account_confirm'|trans }}
                </div>
                <p>{{ 'profile.delete_account_consequences'|trans }}</p>
                <ul class="consequences-list">
                    <li>{{ 'profile.delete_consequence_1'|trans }}</li>
                    <li>{{ 'profile.delete_consequence_2'|trans }}</li>
                    <li>{{ 'profile.delete_consequence_3'|trans }}</li>
                </ul>
            </div>
            <div class="modal-footer">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete-account') }}">
                <button type="button" class="btn btn-secondary" onclick="hideDeleteModal()">{{ 'action.cancel'|trans }}</button>
                <button type="submit" class="btn btn-danger">{{ 'profile.confirm_delete'|trans }}</button>
            </div>
        </form>
    </div>
</div>

<script>
function showDeleteModal() {
    document.getElementById('deleteModal').classList.add('show');
}

function hideDeleteModal() {
    document.getElementById('deleteModal').classList.remove('show');
}

function copyToken(btn) {
    const token = document.getElementById('newToken').textContent;
    navigator.clipboard.writeText(token).then(function() {
        const originalHtml = btn.innerHTML;
        btn.innerHTML = '<i class="fas fa-check"></i> {{ "action.copied"|trans }}';
        btn.classList.add('copied');
        setTimeout(() => {
            btn.innerHTML = originalHtml;
            btn.classList.remove('copied');
        }, 2000);
    });
}

function copyCurlCommand(btn) {
    const curlCmd = document.getElementById('curlCommand').textContent;
    navigator.clipboard.writeText(curlCmd).then(function() {
        const originalHtml = btn.innerHTML;
        btn.innerHTML = '<i class="fas fa-check"></i> {{ "action.copied"|trans }}';
        btn.classList.add('copied');
        setTimeout(() => {
            btn.innerHTML = originalHtml;
            btn.classList.remove('copied');
        }, 2000);
    });
}

// Close modal when clicking outside
document.getElementById('deleteModal').addEventListener('click', (e) => {
    if (e.target === e.currentTarget) {
        hideDeleteModal();
    }
});
</script>
{% endblock %}