        <parameters>
          <parameter name="project_id" type="string" required="true">Project ID or path</parameter>
        </parameters>
        <returns>List of branches with names, last commit info, protected status</returns>
      </tool>
      <tool>
        <name>gitlab_get_commit_{{ integration_id }}</name>
        <purpose>Get detailed commit information</purpose>
        <parameters>
          <parameter name="project_id" type="string" required="true">Project ID or path</parameter>
          <parameter name="sha" type="string" required="true">Commit SHA</parameter>
        </parameters>
