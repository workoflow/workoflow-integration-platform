        <parameters>
          <parameter name="project_id" type="string" required="true">Project ID or path</parameter>
          <parameter name="ref_name" type="string" required="false">Branch/tag name (default: main)</parameter>
          <parameter name="since" type="string" required="false">Start date (ISO 8601)</parameter>
        </parameters>
        <returns>List of commits with SHAs, messages, authors, dates</returns>
      </tool>
    </tool-category>

    <tool-category name="Merge Requests">
      <tool>
        <name>gitlab_search_merge_requests_{{ integration_id }}</name>
        <purpose>Search for merge requests across projects</purpose>
        <parameters>
          <parameter name="state" type="string" required="false">State filter: opened, closed, merged, all (default: opened)</parameter>
          <parameter name="scope" type="string" required="false">Scope: all, assigned_to_me, created_by_me</parameter>
        </parameters>
        <returns>List of matching merge requests with IIDs, titles, states, authors</returns>
      </tool>
      <tool>
        <name>gitlab_get_merge_request_{{ integration_id }}</name>
        <purpose>Get detailed merge request information</purpose>
        <parameters>
          <parameter name="project_id" type="string" required="true">Project ID or path</parameter>
          <parameter name="merge_request_iid" type="integer" required="true">Merge request IID</parameter>
        </parameters>
        <returns>MR details, description, reviewers, approvals, pipeline status</returns>
      </tool>
      <tool>
        <name>gitlab_get_merge_request_changes_{{ integration_id }}</name>
        <purpose>Get file changes/diff in merge request</purpose>
        <parameters>
          <parameter name="project_id" type="string" required="true">Project ID or path</parameter>
          <parameter name="merge_request_iid" type="integer" required="true">Merge request IID</parameter>
        </parameters>
        <returns>File diffs, added/deleted lines, changed files</returns>
      </tool>
      <tool>
        <name>gitlab_get_merge_request_discussions_{{ integration_id }}</name>
        <purpose>Get all discussions/comments on merge request</purpose>
        <parameters>
          <parameter name="project_id" type="string" required="true">Project ID or path</parameter>
          <parameter name="merge_request_iid" type="integer" required="true">Merge request IID</parameter>
        </parameters>
        <returns>Discussion threads with comments, authors, timestamps</returns>
      </tool>
      <tool>
        <name>gitlab_get_merge_request_commits_{{ integration_id }}</name>
